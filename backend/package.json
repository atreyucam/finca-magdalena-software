{
    "name": "finca-backend",
    "version": "0.1.0",
    "private": true,
    "main": "src/server.js",
    "scripts": {
        "seed": "node scripts/seed.js",
        "dev": "nodemon -L --watch src --ext js,json src/server.js",
        "start": "cross-env NODE_ENV=production node src/server.js",
        "db:sync": "cross-env NODE_ENV=development node -e \"require('./src/db').sync()\"",
        "db:seed": "cross-env NODE_ENV=development node -e \"require('./src/db').seed()\"",
        "test": "cross-env NODE_ENV=test jest --runInBand",
        "test:watch": "cross-env NODE_ENV=test jest --watch"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "pdfkit": "^0.13.0",
        "pg": "^8.12.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.3",
        "socket.io": "^4.8.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "cross-env": "^10.0.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.0",
        "supertest": "^7.1.4"
    }
}
